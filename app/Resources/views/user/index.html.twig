{% extends 'base.html.twig' %}

{% block body %}
    <h1>Students list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Email</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">show</a></td>
                <td><a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a></td>
                <td><a href="{{ path('user_delete', { 'id': user.id }) }}">delete</a></td>
                    
                            
                       
                            
                        
                           
                        
                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
